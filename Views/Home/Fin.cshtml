@{
    ViewData["Title"] = "Fin del Juego";
}

<div class="fin-container fadeInUp">
    <h1>🎉 ¡Juego Terminado!</h1>
    
    <div class="resultados">
        <h2>👤 Jugador: @ViewBag.Username</h2>
        
        <div class="puntaje-final">
            <h3>🏆 Puntaje Final</h3>
            <div class="puntaje-numero">@ViewBag.PuntajeFinal</div>
        </div>
        
        <div class="preguntas-correctas">
            📊 Preguntas correctas: @ViewBag.CantidadPreguntasCorrectas
        </div>
    </div>
    
    <div class="acciones">
        <a asp-controller="Home" asp-action="ConfigurarJuego" class="btn-volver">🔄 JUGAR DE NUEVO</a>
        <a asp-controller="Home" asp-action="Index" class="btn-inicio">🏠 IR AL INICIO</a>
    </div>
</div>

