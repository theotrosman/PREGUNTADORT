<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PreguntadOrt</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="icon" href="~/favicon.ico" />
</head>
<body>
    <header>
        <div class="container">
            <a asp-controller="Home" asp-action="Index">
                <img src="~/Img/Logo.png" alt="PreguntadOrt Logo" class="logo">
            </a>
            <div class="nav-links">
                <a asp-controller="Home" asp-action="ConfigurarJuego" class="btn-jugar">JUGAR</a>
            </div>
        </div>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        <p>&copy; @DateTime.Now.Year - PreguntadOrt - Juego de Preguntas y Respuestas</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>